<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="ChatVM"
            type="io.crim.android.ouiconversation.vm.ChatVM" />
    </data>

    <io.crim.android.ouicore.widget.InterceptLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:animateLayoutChanges="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:tag="layout/layout_input_cote_0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/theme_bg2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:minHeight="55dp"
            android:paddingRight="10dp"
            android:animateLayoutChanges="true"
            android:paddingBottom="6dp">

            <CheckBox
                android:id="@+id/voice"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:button="@null"
                android:visibility="gone"
                android:background="@android:color/transparent"
                android:layout_marginRight="-8dp"
                android:drawableLeft="@drawable/selector_chat_checkbox"
                />

            <LinearLayout
                android:id="@+id/inputLy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <io.crim.android.ouiconversation.widget.TailInputEditText
                        android:id="@+id/chatInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/sty_radius_4_white"
                        android:maxHeight="80dp"
                        android:minHeight="36dp"
                        android:paddingStart="3dp"
                        android:text="@={ChatVM.inputMsg}"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/notice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="已开启群禁言"
                        android:textColor="#ff999999"
                        android:textSize="12sp"
                        android:visibility="gone" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/replyLy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/sty_radius_4_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="3dp"
                    android:visibility="gone"
                    android:paddingRight="3dp">

                    <TextView
                        android:id="@+id/replyContent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:textColor="#ff999999"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/cancelReply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:src="@mipmap/ic_close" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/touchSay"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="36dp"
                android:gravity="center"
                android:textSize="16sp"
                android:alpha="0.3"
                android:textColor="@color/txt_black"
                android:background="@drawable/sty_radius_4_white"
                android:text="@string/touch_say"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/emoji"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:paddingLeft="3dp"
                android:src="@mipmap/emoji" />

            <ImageView
                android:id="@+id/chatMoreOrSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:clickable="true"
                android:layout_marginLeft="8dp"
                android:paddingLeft="5dp"
                android:src="@mipmap/ic_chat_add" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </io.crim.android.ouicore.widget.InterceptLinearLayout>

</layout>

